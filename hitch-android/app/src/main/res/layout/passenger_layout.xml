<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Passenger Layout"
        android:textSize="40sp"/>
    <!-- Google Maps fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- todo: viewswitcher -->
    <!-- ride filter fragment -->
    <!-- LogFilterFragment so user can configure how they want to filter activities -->
    <fragment
        android:name="hitch_frontend.hitch.activity.RideFilterFragment"
        class="hitch_frontend.hitch.activity.RideFilterFragment"
        android:id="@+id/ridefilter_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>